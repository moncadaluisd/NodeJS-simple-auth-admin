    <section id="main-content">
        <section class="wrapper">
        <!-- page start-->


        <div class="row">
            <div class="col-md-6">

                <div data-collapsed="0" class="panel">

                    <div class="panel-heading">
                        <div class="panel-title">
                            Nueva alerta
                        </div>
                    </div>

                    <div class="panel-body">

                        <div class="row">



                        <form method="post" id="notify">
                          <div class="col-md-12 form-group">
                              <input type="text" placeholder="Market"  id="market"  name="market" class="form-control">
                          </div>

                          <div class="col-md-12 m-bot20">

                              <input type="checkbox" checked data-text-label="status "  id="status" name="status">
                          </div>
                          <div class="form-group">

                              <div class="col-md-12 col-xs-11">
                                  <input class="form-control form-control-inline input-medium default-date-picker"  size="16" type="text" value="" name="date" id="date" placeholder="Buy Date" />
                                  <span class="help-block">Select date</span>
                              </div>
                          </div>

                          <div class="col-md-12 form-group">
                              <input type="text" placeholder="Price"  name="price"  id="price" class="form-control">
                          </div>

                          <div class="col-md-12 col-xs-11">
                              <input class="form-control form-control-inline input-medium default-date-picker"  size="16" type="text" value="" name="sdate" id="sdate" placeholder="Sell date" />
                              <span class="help-block">Select date</span>
                          </div>
                          <div class="col-md-12 form-group">
                              <input type="text" placeholder="Sell Price"  name="sprice" id="sprice"  class="form-control">
                          </div>

                          <div class="col-md-12 form-group">
                              <input type="text" placeholder="Profit %"  name="profit"  id="profit" class="form-control">
                          </div>
                      </div>





                          <button class="btn btn-primary" id="data">Alertar</button>
                        </form>

                        <div class="alert alert-warning clearfix" id="alert" style="display:none;margin-top:20px;padding-bottom: 30px;">
                <span class="alert-icon"><i class="fa fa-envelope-o"></i></span>
                <div class="notification-info">
                    <ul class="clearfix notification-meta">
                        <li class="pull-left notification-sender" id="alerta"> </li>

                    </ul>
                </div>
            </div>

                        </div>

                    </div>

                </div>

            </div>

            <section class="panel">
                    <header class="panel-heading">
                        Notifaction
                        <span class="tools pull-right">
                            <a href="javascript:;" class="fa fa-chevron-down"></a>
                            <a href="javascript:;" class="fa fa-cog"></a>
                            <a href="javascript:;" class="fa fa-times"></a>
                         </span>
                    </header>
                    <div class="panel-body" style="display: block;">
                        <section id="no-more-tables">
                            <table class="table table-bordered table-striped table-condensed cf">
                                <thead class="cf">
                            <tr style="font-size: 1rem;">
                                <th>Market</th>
                                <th>status</th>
                                <th class="">Buy Date</th>
                                <th class="">Buy Price</th>
                                <th class="">Sell Date	</th>
                                <th class="">Current / Sell Price</th>
                                <th class="">Profit %</th>
                                <th class="">edit</th>

                            </tr>
                            </thead>
                            <tbody id="data-table">

                            </tbody>
                        </table>
                    </section>
        </div>

        <!-- page end-->
        </section>
    </section>
