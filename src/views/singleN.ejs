                        <script type="text/javascript">


                            $('#notify').submit(function(event) {
                              event.preventDefault();
                              /* Act on the event */
                              var profit = $('#profit');
                              var date = $('#date');
                              var price = $('#price');
                              var sprice = $('#sprice');
                              var sdate = $('#sdate');
                              var status = $('#status');
                              var market = $('#market');
                              var id = '<%= user.id %>';
                              if( market != ''){

                              $.ajax({
                                url: '/notify',
                                type: 'POST',
                                data: $(this).serialize()
                              })
                              .done(function(data) {
                                console.log(data);
                                $('#alert').css('display', 'block');
                                $('#alerta').html(data);
                              })
                              .fail(function() {
                                console.log("error");
                              })
                              .always(function() {
                                console.log("complete");
                              });

                        }
                          });



                            $.ajax({
                              url: '/api/notify',
                              type: 'POST',
                              data: {id: '<%= user.id %>'}
                            })
                            .done(function(data) {
                              console.log(data);
                              for (var i = 0; i < data.length; i++) {

                                $('#data-table').append('<tr><td data-title="market">'+  data[i].market+'</td><td data-title="status">'+  data[i].status+'</td><td data-title="buy date">'+  data[i].date+'</td><td data-title="buy price">'+  data[i].price+'</td><td data-title="sell Date">'+  data[i].sDate+'</td><td data-title="Current/sell Price">'+  data[i].sellP+'</td><td data-title="Profit">'+  data[i].profit+'%</td> </tr>');
